<h1>ADMIN -- Rotten Mangoes Users</h1>

<%= paginate @users %>

<table>                         
  <tr>                          
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th></th>
    <th>Update</th>
    <th>Delete</th>
  </tr>
<% @users.each do |user| %>   
  <tr>
    <td><%= link_to user.id, admin_user_path(user) %></td>  
    <td><%= user.firstname %></td>  
    <td><%= user.lastname %></td>  
    <td><%= user.email %></td> 
    <td><%= user.admin %></td>

    <td><%= link_to "Make Admin", admin_user_make_admin_path(user_id: user.id) %></td>

    <td><%= link_to "Update", edit_admin_user_path(user) %></td>
    <td><%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?'} %> </td>
  </tr>
<% end %>                      
</table> 

