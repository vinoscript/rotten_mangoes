
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <!-- <img src="..." alt="..."> -->
      <%= link_to image_tag(movie.image || @movie.remote_image_url, :size => '260x360'), movie_path(movie) %>
      <div class="caption">
        <h3><%= movie.title %></h3>
        <p><%= truncate(movie.description, :omission => "...", :length => 200) %></p>
        <p><a href=<%= movie_path(movie) %> class="btn btn-default" role="button">Details</a></p>
      </div>
    </div>
  </div>


